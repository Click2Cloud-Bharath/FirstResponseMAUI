<?xml version="1.0" encoding="UTF-8"?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="FirstResponseMAUI.Views.IncidentListPaneView"   
    xmlns:templates="clr-namespace:FirstResponseMAUI.Views.Templates">
    <ContentView.Content>
        <Grid
            BackgroundColor="{StaticResource DarkGrayColor}">
            <ListView 
                SelectedItem="{Binding SelectedIncident, Mode=TwoWay}"   
                ItemsSource="{Binding IncidentList}"   
                HasUnevenRows="True"
                CachingStrategy="RecycleElement"
                SeparatorVisibility="None"
                BackgroundColor="{StaticResource DarkGrayColor}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <templates:IncidentListItemTemplate />
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </ContentView.Content>
</ContentView>
